@using Vetify.Models.ViewModel
@model RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vetify - Kayıt Ol</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/vet/styles.css" />
</head>
<body class="auth-page">
    <div class="auth-container">
        <div class="row g-0 h-100">
            <div class="col-lg-6 auth-left d-none d-lg-flex">
                <div class="auth-branding">
                    <div class="auth-logo">
                        <i class="bi bi-heart-pulse-fill"></i>
                    </div>
                    <h1>Vetify</h1>
                    <p>Modern veteriner klinik yönetim sistemi</p>
                    <div class="auth-features">
                        <div class="feature-item">
                            <i class="bi bi-check-circle-fill"></i>
                            <span>Ücretsiz deneme sürümü</span>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-check-circle-fill"></i>
                            <span>Sınırsız hasta kaydı</span>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-check-circle-fill"></i>
                            <span>7/24 teknik destek</span>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-check-circle-fill"></i>
                            <span>Mobil uygulama desteği</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 auth-right">
                <div class="auth-form-wrapper">
                    <div class="auth-form-container">
                        <div class="text-center mb-4 d-lg-none">
                            <div class="auth-logo-mobile mb-3">
                                <i class="bi bi-heart-pulse-fill text-primary"></i>
                            </div>
                            <h2 class="text-primary fw-bold">Vetify</h2>
                        </div>

                        <h2 class="auth-title">Hesap Oluştur</h2>
                        <p class="auth-subtitle">Vetify'e katılın</p>

                        <form id="registerForm" class="auth-form" method="POST" asp-action="Register" asp-controller="Account" >
                            <div class="mb-3">
                                <label for="fullName" class="form-label">Ad Soyad <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white">
                                        <i class="bi bi-person"></i>
                                    </span>
                                    <input type="text" class="form-control"  id="fullName" placeholder="Adınız Soyadınız" required asp-for="AdSoyad">
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="email" class="form-label">E-posta <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white">
                                        <i class="bi bi-envelope"></i>
                                    </span>
                                    <input type="email" class="form-control"  id="email" placeholder="ornek@email.com" required asp-for="Eposta">
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="phone" class="form-label">Telefon</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white">
                                        <i class="bi bi-telephone"></i>
                                    </span>
                                    <input type="tel" class="form-control"  id="phone" placeholder="0(5XX) XXX XX XX" asp-for="PhoneNumber">
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label">Şifre <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white">
                                        <i class="bi bi-lock"></i>
                                    </span>
                                    <input type="password" class="form-control" id="password" placeholder="••••••••" required asp-for="Sifre">
                                    <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                </div>
                                <div class="form-text">En az 8 karakter, büyük-küçük harf ve rakam içermelidir</div>
                            </div>

                            <div class="mb-3">
                                <label for="passwordConfirm" class="form-label">Şifre Tekrar <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white">
                                        <i class="bi bi-lock"></i>
                                    </span>
                                    <input type="password" class="form-control" id="passwordConfirm" placeholder="••••••••" required>
                                </div>
                            </div>

                            <div class="mb-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="agreeTerms" required>
                                    <label class="form-check-label" for="agreeTerms">
                                        <a href="#" class="text-primary text-decoration-none">Kullanım şartlarını</a> ve
                                        <a href="#" class="text-primary text-decoration-none">gizlilik politikasını</a> kabul ediyorum
                                    </label>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                                Kayıt Ol
                            </button>

                            <div class="text-center">
                                <span class="text-muted">Zaten hesabınız var mı?</span>
                                <a href="login.cshtml" class="text-primary text-decoration-none fw-semibold ms-1">Giriş yapın</a>
                            </div>
                        </form>

                        <div class="auth-divider">
                            <span>veya</span>
                        </div>

                        <div class="d-grid gap-2">
                            <button class="btn btn-outline-secondary">
                                <i class="bi bi-google me-2"></i>Google ile Kayıt Ol
                            </button>
                        </div>
                    </div>

                    <div class="auth-footer">
                        <p class="text-muted small mb-0">
                            &copy; 2025 Vetify. Tüm hakları saklıdır.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/vet/script.js"></script>
</body>
</html>
