@using Vetify.Models.ViewModel
@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vetify - Giriş Yap</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/vet/styles.css" />
</head>
<body class="auth-page">
    <div class="auth-container">
        <div class="row g-0 h-100">
            <div class="col-lg-6 auth-left d-none d-lg-flex">
                <div class="auth-branding">
                    <div class="auth-logo">
                        <i class="bi bi-heart-pulse-fill"></i>
                    </div>
                    <h1>Vetify</h1>
                    <p>Modern veteriner klinik yönetim sistemi</p>
                    <div class="auth-features">
                        <div class="feature-item">
                            <i class="bi bi-check-circle-fill"></i>
                            <span>Kolay randevu yönetimi</span>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-check-circle-fill"></i>
                            <span>Detaylı hasta takibi</span>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-check-circle-fill"></i>
                            <span>Otomatik ödeme sistemleri</span>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-check-circle-fill"></i>
                            <span>Kapsamlı raporlama</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 auth-right">
                <div class="auth-form-wrapper">
                    <div class="auth-form-container">
                        <div class="text-center mb-4 d-lg-none">
                            <div class="auth-logo-mobile mb-3">
                                <i class="bi bi-heart-pulse-fill text-primary"></i>
                            </div>
                            <h2 class="text-primary fw-bold">Vetify</h2>
                        </div>

                        <h2 class="auth-title">Hoş Geldiniz</h2>
                        <p class="auth-subtitle">Hesabınıza giriş yapın</p>


                        <form id="loginForm" class="auth-form" asp-controller="Account" asp-action="login" method="POST">
                            <div class="mb-3">
                                <label for="email" class="form-label">E-posta</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white">
                                        <i class="bi bi-envelope"></i>
                                    </span>
                                    <input type="email" class="form-control" id="email" placeholder="ornek@email.com" asp-for="Eposta" required>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label">Şifre</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white">
                                        <i class="bi bi-lock"></i>
                                    </span>
                                    <input type="password" class="form-control" id="password" placeholder="••••••••" asp-for="Sifre" required>
                                    <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="rememberMe" asp-for="BeniHatirla">
                                    <label class="form-check-label" for="rememberMe">
                                        Beni hatırla
                                    </label>
                                </div>
                                <a href="#" class="text-primary text-decoration-none small">Şifremi unuttum</a>
                            </div>

                            <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                                Giriş Yap
                            </button>

                            <div class="text-center">
                                <span class="text-muted">Hesabınız yok mu?</span>
                                <a href="/Account/Register" class="text-primary text-decoration-none fw-semibold ms-1">Kayıt olun</a>
                            </div>
                        </form>

                        <div class="auth-divider">
                            <span>veya</span>
                        </div>

                        <div class="d-grid gap-2">
                            <button class="btn btn-outline-secondary">
                                <i class="bi bi-google me-2"></i>Google ile Giriş Yap
                            </button>
                        </div>
                    </div>

                    <div class="auth-footer">
                        <p class="text-muted small mb-0">
                            &copy; 2025 Vetify. Tüm hakları saklıdır.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/vet/script.js"></script>
</body>
</html>
