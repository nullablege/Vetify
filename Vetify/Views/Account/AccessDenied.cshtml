@{
    ViewData["Title"] = "Erişim Engellendi";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body class="bg-light">
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-md-6 text-center">
                <div class="card shadow">
                    <div class="card-body p-5">
                        <i class="bi bi-shield-exclamation text-danger" style="font-size: 5rem;"></i>
                        <h1 class="mt-4 mb-3">Erişim Engellendi</h1>
                        <p class="text-muted mb-4">
                            Bu sayfaya erişim yetkiniz bulunmamaktadır.
                        </p>
                        <div class="d-grid gap-2">
                            <a href="~/Account/Login" class="btn btn-primary">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap
                            </a>
                            <a href="~/" class="btn btn-outline-secondary">
                                <i class="bi bi-house me-2"></i>Ana Sayfaya Dön
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
