@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main class="container-fluid px-4 py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="page-title mb-3">Dashboard</h1>
            <p class="text-muted">Hoş geldiniz, Dr. Ayşe Yılmaz</p>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="stat-card">
                <div class="stat-icon bg-primary-soft">
                    <i class="bi bi-heart-pulse text-primary"></i>
                </div>
                <div class="stat-content">
                    <h3 class="stat-value">127</h3>
                    <p class="stat-label">Toplam Hayvan</p>
                    <span class="stat-change positive"><i class="bi bi-arrow-up"></i> 12% bu ay</span>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stat-card">
                <div class="stat-icon bg-success-soft">
                    <i class="bi bi-calendar-check text-success"></i>
                </div>
                <div class="stat-content">
                    <h3 class="stat-value">34</h3>
                    <p class="stat-label">Bugünkü Randevular</p>
                    <span class="stat-change">8 Tamamlandı</span>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stat-card">
                <div class="stat-icon bg-warning-soft">
                    <i class="bi bi-clock-history text-warning"></i>
                </div>
                <div class="stat-content">
                    <h3 class="stat-value">12</h3>
                    <p class="stat-label">Bekleyen Randevu</p>
                    <span class="stat-change">Sonraki 7 gün</span>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stat-card">
                <div class="stat-icon bg-info-soft">
                    <i class="bi bi-currency-dollar text-info"></i>
                </div>
                <div class="stat-content">
                    <h3 class="stat-value">₺24,580</h3>
                    <p class="stat-label">Aylık Gelir</p>
                    <span class="stat-change positive"><i class="bi bi-arrow-up"></i> 8% artış</span>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-xl-8">
            <div class="card custom-card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Bugünkü Randevular</h5>
                    <a href="~/Vet/Randevular" class="btn btn-sm btn-outline-primary">Tümünü Gör</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Saat</th>
                                    <th>Hayvan</th>
                                    <th>Sahip</th>
                                    <th>Tür</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><span class="badge bg-light text-dark">09:00</span></td>
                                    <td><strong>Minnoş</strong></td>
                                    <td>Mehmet Demir</td>
                                    <td><span class="badge bg-warning">Kedi</span></td>
                                    <td><span class="badge bg-success">Tamamlandı</span></td>
                                    <td>
                                        <button class="btn btn-sm btn-icon"><i class="bi bi-eye"></i></button>
                                    </td>
                                </tr>
                                <tr>
                                    <td><span class="badge bg-light text-dark">10:30</span></td>
                                    <td><strong>Max</strong></td>
                                    <td>Zeynep Kaya</td>
                                    <td><span class="badge bg-primary">Köpek</span></td>
                                    <td><span class="badge bg-success">Tamamlandı</span></td>
                                    <td>
                                        <button class="btn btn-sm btn-icon"><i class="bi bi-eye"></i></button>
                                    </td>
                                </tr>
                                <tr class="table-active">
                                    <td><span class="badge bg-primary text-white">11:00</span></td>
                                    <td><strong>Luna</strong></td>
                                    <td>Ali Yılmaz</td>
                                    <td><span class="badge bg-warning">Kedi</span></td>
                                    <td><span class="badge bg-info">Devam Ediyor</span></td>
                                    <td>
                                        <button class="btn btn-sm btn-icon"><i class="bi bi-eye"></i></button>
                                    </td>
                                </tr>
                                <tr>
                                    <td><span class="badge bg-light text-dark">14:00</span></td>
                                    <td><strong>Charlie</strong></td>
                                    <td>Fatma Öztürk</td>
                                    <td><span class="badge bg-primary">Köpek</span></td>
                                    <td><span class="badge bg-secondary">Bekliyor</span></td>
                                    <td>
                                        <button class="btn btn-sm btn-icon"><i class="bi bi-eye"></i></button>
                                    </td>
                                </tr>
                                <tr>
                                    <td><span class="badge bg-light text-dark">15:30</span></td>
                                    <td><strong>Pamuk</strong></td>
                                    <td>Ahmet Şahin</td>
                                    <td><span class="badge bg-warning">Kedi</span></td>
                                    <td><span class="badge bg-secondary">Bekliyor</span></td>
                                    <td>
                                        <button class="btn btn-sm btn-icon"><i class="bi bi-eye"></i></button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4">
            <div class="card custom-card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Hızlı İşlemler</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-3">
                        <a href="~/Vet/HayvanEkle" class="btn btn-primary btn-lg">
                            <i class="bi bi-plus-circle me-2"></i>Yeni Hayvan Ekle
                        </a>
                        <a href="~/Vet/RandevuEkle" class="btn btn-success btn-lg">
                            <i class="bi bi-calendar-plus me-2"></i>Randevu Oluştur
                        </a>
                        <a href="~/Vet/TedaviEkle" class="btn btn-info btn-lg">
                            <i class="bi bi-bandaid me-2"></i>Tedavi Ekle
                        </a>
                        <a href="~/Vet/Odemeler" class="btn btn-warning btn-lg">
                            <i class="bi bi-credit-card me-2"></i>Ödeme Kaydet
                        </a>
                    </div>
                </div>
            </div>

            <div class="card custom-card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Son Aktiviteler</h5>
                </div>
                <div class="card-body p-0">
                    <div class="activity-list">
                        <div class="activity-item">
                            <div class="activity-icon bg-success-soft">
                                <i class="bi bi-check-circle text-success"></i>
                            </div>
                            <div class="activity-content">
                                <p class="activity-text"><strong>Max</strong> için randevu tamamlandı</p>
                                <span class="activity-time">5 dakika önce</span>
                            </div>
                        </div>
                        <div class="activity-item">
                            <div class="activity-icon bg-primary-soft">
                                <i class="bi bi-plus-circle text-primary"></i>
                            </div>
                            <div class="activity-content">
                                <p class="activity-text">Yeni hayvan eklendi: <strong>Luna</strong></p>
                                <span class="activity-time">1 saat önce</span>
                            </div>
                        </div>
                        <div class="activity-item">
                            <div class="activity-icon bg-warning-soft">
                                <i class="bi bi-currency-dollar text-warning"></i>
                            </div>
                            <div class="activity-content">
                                <p class="activity-text">₺450 ödeme alındı</p>
                                <span class="activity-time">2 saat önce</span>
                            </div>
                        </div>
                        <div class="activity-item">
                            <div class="activity-icon bg-info-soft">
                                <i class="bi bi-calendar text-info"></i>
                            </div>
                            <div class="activity-content">
                                <p class="activity-text">Yarın için 8 randevu planlandı</p>
                                <span class="activity-time">3 saat önce</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


