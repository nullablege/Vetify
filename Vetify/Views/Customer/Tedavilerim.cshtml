@using EL.Entities
@model List<Tedavi>

@{
    ViewData["Title"] = "Tedavilerim";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<main class="container-fluid px-4 py-4">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="page-title mb-3">Tedavilerim</h1>
            <p class="text-muted">Hayvanlarınızın tüm tedavi geçmişi</p>
        </div>
    </div>

    <!-- Treatment Cards -->
    <div class="row">
        <div class="col-12">
            
            @foreach(var x in Model)
            {
                <div class="card custom-card mb-3">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-2">
                                <div class="text-center">
                                    <div class="stat-icon bg-success-soft mx-auto mb-2">
                                        <i class="bi bi-bandaid text-success"></i>
                                    </div>
                                    <small class="text-muted">@x.TedaviTarihi.ToString("D")</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h6 class="mb-1">@x.TedaviTuru</h6>
                                <p class="text-muted mb-1">Hayvan: <strong>@x.Randevu.Hayvan.Ad</strong></p>
                                <p class="text-muted mb-0">Randevu: #@x.Id - @x.TedaviTarihi.ToString("D"), @x.TedaviTarihi.ToString("HH:mm")</p>
                                <p class="text-muted mb-0 mt-2"><small>@x.TedaviTuru</small></p>
                            </div>
                            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                                <h5 class="text-primary mb-1">₺@x.Ucret</h5>
                                <small class="text-muted">@x.Aciklama</small>
                            </div>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</main>


